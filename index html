    <div class="container">
        <div class="header">
            <h1>ðŸš— RideNow</h1>
            <p>Your ride, just a tap away</p>
        </div>

        <div class="content">
            <!-- Step 1: Phone Number -->
            <div class="step active" id="step1">
                <div class="input-group">
                    <label for="phone">Enter Your Phone Number</label>
                    <input type="tel" id="phone" placeholder="+1 (555) 123-4567" maxlength="17">
                </div>
                <div class="input-group">
                    <label for="pickup">Pickup Location</label>
                    <input type="text" id="pickup" placeholder="Enter pickup address">
                </div>
                <div class="input-group">
                    <label for="destination">Destination</label>
                    <input type="text" id="destination" placeholder="Enter destination">
                </div>
                <button onclick="requestOTP()">Request Ride</button>
            </div>

            <!-- Step 2: OTP Display -->
            <div class="step" id="step2">
                <div class="otp-display">
                    <p>Your OTP Code</p>
                    <div class="otp-code" id="generatedOTP">----</div>
                    <p>Valid for 5 minutes</p>
                </div>
                <p style="text-align: center; color: #666; margin-bottom: 20px;">
                    Enter this code to confirm your ride
                </p>
                <div class="otp-container">
                    <input type="text" class="otp-input" maxlength="1" id="otp1">
                    <input type="text" class="otp-input" maxlength="1" id="otp2">
                    <input type="text" class="otp-input" maxlength="1" id="otp3">
                    <input type="text" class="otp-input" maxlength="1" id="otp4">
                </div>
                <button onclick="verifyOTP()">Verify & Confirm Ride</button>
                <div class="resend-link" onclick="regenerateOTP()">Resend OTP</div>
            </div>

            <!-- Step 3: Success -->
            <div class="step" id="step3">
                <div class="success-icon">âœ“</div>
                <h2 style="text-align: center; margin-bottom: 20px; color: #333;">Ride Confirmed!</h2>
                <div class="ride-details">
                    <p><strong>Pickup:</strong> <span id="confirmPickup"></span></p>
                    <p><strong>Destination:</strong> <span id="confirmDestination"></span></p>
                    <p><strong>Driver:</strong> John Smith</p>
                    <p><strong>Vehicle:</strong> Toyota Camry - ABC 1234</p>
                    <p><strong>ETA:</strong> 5 minutes</p>
                </div>
                <button onclick="resetApp()">Book Another Ride</button>
            </div>
        </div>
    </div>

    <script>
        let currentOTP = '';
        let phoneNumber = '';
        let pickup = '';
        let destination = '';

        function generateOTP() {
            return Math.floor(1000 + Math.random() * 9000).toString();
        }

        function showStep(stepNumber) {
            document.querySelectorAll('.step').forEach(step => {
                step.classList.remove('active');
            });
            document.getElementById(`step${stepNumber}`).classList.add('active');
        }

        function requestOTP() {
            phoneNumber = document.getElementById('phone').value;
            pickup = document.getElementById('pickup').value;
            destination = document.getElementById('destination').value;

            if (!phoneNumber || !pickup || !destination) {
                alert('Please fill in all fields');
                return;
            }

            currentOTP = generateOTP();
            document.getElementById('generatedOTP').textContent = currentOTP;
            showStep(2);
        }

        function regenerateOTP() {
            currentOTP = generateOTP();
            document.getElementById('generatedOTP').textContent = currentOTP;
            
            // Clear OTP inputs
            for (let i = 1; i <= 4; i++) {
                document.getElementById(`otp${i}`).value = '';
            }
        }

        function verifyOTP() {
            const enteredOTP = 
                document.getElementById('otp1').value +
                document.getElementById('otp2').value +
                document.getElementById('otp3').value +
                document.getElementById('otp4').value;

            if (enteredOTP === currentOTP) {
                document.getElementById('confirmPickup').textContent = pickup;
                document.getElementById('confirmDestination').textContent = destination;
                showStep(3);
            } else {
                alert('Invalid OTP. Please try again.');
                for (let i = 1; i <= 4; i++) {
                    document.getElementById(`otp${i}`).value = '';
                }
                document.getElementById('otp1').focus();
            }
        }

        function resetApp() {
            document.getElementById('phone').value = '';
            document.getElementById('pickup').value = '';
            document.getElementById('destination').value = '';
            for (let i = 1; i <= 4; i++) {
                document.getElementById(`otp${i}`).value = '';
            }
            currentOTP = '';
            showStep(1);
        }

        // OTP input auto-focus
        document.querySelectorAll('.otp-input').forEach((input, index) => {
            input.addEventListener('input', (e) => {
                if (e.target.value.length === 1 && index < 3) {
                    document.getElementById(`otp${index + 2}`).focus();
                }
            });

            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !e.target.value && index > 0) {
                    document.getElementById(`otp${index}`).focus();
                }
            });
        });
    </script>
</body>
